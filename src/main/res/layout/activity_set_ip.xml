<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_set_ip"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nickjm6.picontroller.SetIP">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/header"
        android:textSize="32sp"
        android:text="Set Pi Address"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="IP Address:"
        android:textSize="28sp"
        android:id="@+id/ipHead"
        android:layout_below="@+id/header" />
    <EditText
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp"
        android:inputType="text"
        android:id="@+id/ip"
        android:layout_below="@+id/header"
        android:layout_toRightOf="@+id/ipHead"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Port:"
        android:textSize="28sp"
        android:id="@+id/portHead"
        android:layout_below="@id/ipHead"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_below="@id/portHead"
        android:layout_marginTop="35dp"
        android:text="Update"
        android:textSize="32dp"
        android:onClick="setIP"
        android:background="#0000FF"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/port"
        android:inputType="text"
        android:layout_below="@+id/ip"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@id/portHead"
        android:layout_marginLeft="15dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
